<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="group27.weatherapp.weather_view.mountain_view.MountainController"
            fx:id="rootpane">
    <top>
        <BorderPane fx:id="header">
            <left>
                <HBox alignment="CENTER">
                    <Text fx:id="rainDetails"
                          style="-fx-font: 16 arial;"
                          lineSpacing="7"/>
                </HBox>
            </left>
            <center>
                <HBox alignment="CENTER">
                    <VBox alignment="CENTER">
                        <ImageView fx:id="hazardImage" fitWidth="60" fitHeight="50"/>
                        <Text fx:id="hazardText">Hazards</Text>
                    </VBox>
                </HBox>
            </center>
            <right>
                <HBox alignment="CENTER">
                    <VBox>
                        <ImageView fx:id="sunriseImage" fitWidth="80" fitHeight="50"/>
                        <Text fx:id="sunriseSunset"/>
                    </VBox>
                </HBox>
            </right>
        </BorderPane>
    </top>
    <center>
        <GridPane fx:id="weatherGrid"/>
    </center>
</BorderPane>
